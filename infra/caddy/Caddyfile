{
  email {$ADMIN_EMAIL}
}

{$DOMAIN} {
  encode gzip zstd

  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    Referrer-Policy "strict-origin-when-cross-origin"
    Permissions-Policy "camera=(), microphone=(self), geolocation=()"
    Content-Security-Policy "default-src 'self'; base-uri 'self'; frame-ancestors 'none'; object-src 'none'; form-action 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; style-src-elem 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: blob: https:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https: wss: ws:;"
  }

  # Better Auth HTTP actions → convex:3210/http/api/auth/*
  @auth path /api/auth/* /api/auth
  handle @auth {
    uri replace /api/auth /http/api/auth
    reverse_proxy convex:3210
  }

  # Convex backend (queries, mutations, WebSocket — port 3210)
  @convex path /convex/*
  handle @convex {
    uri strip_prefix /convex
    reverse_proxy convex:3210
  }

  # Convex site HTTP actions génériques → convex:3210/http/*
  @convex-site path /convex-site/*
  handle @convex-site {
    uri replace /convex-site /http
    reverse_proxy convex:3210
  }

  # Voice API (Socket.io + mediasoup)
  @socketio path /socket.io*
  handle @socketio {
    reverse_proxy api:3001 {
      transport http {
        versions h1
      }
    }
  }

  # Frontend
  reverse_proxy web:80
}
