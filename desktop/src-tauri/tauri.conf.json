{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PrivateChat Desktop",
  "version": "0.1.0",
  "identifier": "com.privatechat.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5174",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PrivateChat Desktop",
        "width": 1080,
        "height": 760,
        "minWidth": 940,
        "minHeight": 640,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
