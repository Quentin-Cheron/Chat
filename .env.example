et APP_NAME=privatechat
DOMAIN=chat.private-chat.site
ADMIN_EMAIL=admin@example.com

# URL publique du site Convex (sans path) — utilisée par Convex pour ses HTTP actions / Better Auth
CONVEX_SITE_ORIGIN=https://chat.private-chat.site

# URL Convex pour le frontend (queries/mutations/WebSocket) — routée par Caddy
VITE_CONVEX_URL=https://chat.private-chat.site/convex

# URL de base Better Auth côté client (le client append /api/auth/* dessus)
# Doit être la racine du domaine car Caddy route /api/auth/* vers Convex
VITE_CONVEX_SITE_URL=https://chat.private-chat.site

# Résolveur cross-instance (laisser vide si non utilisé)
VITE_RESOLVER_BASE_URL=
VITE_PUBLIC_JOIN_BASE_URL=https://chat.private-chat.site

# TURN server pour la voix (laisser vide si non utilisé)
VITE_TURN_URL=
VITE_TURN_USERNAME=
VITE_TURN_PASSWORD=

# MediaSoup (voix)
MEDIASOUP_ANNOUNCED_IP=1.2.3.4
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=40100

# Resolver token
RESOLVER_REGISTER_TOKEN=change-me-resolver

NODE_ENV=production
